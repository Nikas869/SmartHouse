@using DataAccess.Entities.Components
@model DataAccess.Entities.Components.BaseComponent

<div>
    <h4>@Model.Name</h4>
    @if (Model is Switch)
    {
        @Html.Partial("Switch", (Switch)Model)
    }
    else if (Model is SmoothSlider)
    {
        @Html.Partial("SmoothSlider", Model)
    }
</div>